    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "63048",
            "processId": "${command:PickProcess}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program - Audit",
            "program": "${workspaceFolder}\\index.js",
            "args": [
                "--audit",
                "./debug-audit.log"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program - Long Run",
            "program": "${workspaceFolder}\\index.js",
            "args": [
                "--sim",
                "1024",
                "1",
                "102400000000",
                "1024000"
            ]
        }
    ]
}